<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Order Confirmation</title>
</head>

<body>
    <h1>Order Confirmation</h1>
    <p>Thank you for ordering the course "<span id="courseName"></span>".</p>
    <p>Order ID: <span id="orderID"></span></p>
    <p>Price: $<span id="coursePrice"></span></p>
    <p>Date: <span id="orderDate"></span></p>

    <script>
        const mailData = {
            order: {
                _id: '<%= order._id %>',
                name: '<%= order.name %>',
                price: '<%= order.price %>',
                date: '<%= order.date %>'
            }
        };

        document.getElementById('courseName').textContent = mailData.order.name;
        document.getElementById('orderID').textContent = mailData.order._id;
        document.getElementById('coursePrice').textContent = mailData.order.price;
        document.getElementById('orderDate').textContent = mailData.order.date;
    </script>
</body>

</html>